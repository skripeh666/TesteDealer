@model testeDealer.Models.Venda
@{
    ViewBag.Title = "Excluir Venda";
}

<h2>Excluir Venda</h2>

<h3>Tem certeza que deseja excluir esta venda?</h3>
<hr />
<dl class="dl-horizontal">
    <dt>
        Cliente
    </dt>

    <dd>
        @Html.DisplayFor(model => model.IdCliente)
    </dd>

    <dt>
        Produto
    </dt>

    <dd>
        @Html.DisplayFor(model => model.IdProduto)
    </dd>

    <dt>
        Quantidade
    </dt>

    <dd>
        @Html.DisplayFor(model => model.QtdVenda)
    </dd>

    <dt>
        Valor Unitário
    </dt>

    <dd>
        @Html.DisplayFor(model => model.VlrUnitarioVenda)
    </dd>

    <dt>
        Data da Venda
    </dt>

    <dd>
        @Html.DisplayFor(model => model.DthVenda)
    </dd>

    <dt>
        Valor Total
    </dt>

    <dd>
        @Html.DisplayFor(model => model.VlrTotalVenda)
    </dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="row">
        <div class="col-md-offset-2 col-md-4">
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger btn-lg" />
        </div>
        <div class="col-4">
            @Html.ActionLink("Cancelar", "Index", new object { }, new { @class = "btn btn-secondary btn-lg" })
        </div>
    </div>

}
